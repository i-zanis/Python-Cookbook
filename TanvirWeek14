#Class representing a product in the amazon website
class Product():
  def __init__(self,product_id,price, prime_eligible,number_in_stock,date_added):
    self.product_id      = product_id
    self.price           = price
    self.prime_eligible  = prime_eligible
    self.number_in_stock = number_in_stock
    self.date_added      = date_added
  
#setters for the 5 attributes
  def set_product_id(self,product_id):
      self.product_id = product_id
  
  def set_price(self,price):
      self.price = price

  def set_prime_eligible(self,prime_eligible):
      self.prime_eligible = prime_eligible

  def set_number_in_stock(self,number_in_stock):
      self.number_in_stock = number_in_stock

  def set_date_added(self,date_added):
      self.date_added = date_added

#getters for the 5 attributes
  def get_product_id(self):
    return self.product_id

  def get_price(self):
    return self.price

  def get_prime_eligible(self):
    return self.prime_eligible 

  def get_number_in_stock(self):
    return self.number_in_stock

  def get_date_added(self):
    return self.date_added

#print function that prints all the data fields 
  def print_all(self):
    print("Product ID:       " ,self.product_id)
    print("Price:            " , self.price, "Â£")
    print("Prime Eligible:   " , self.prime_eligible)
    print("Stock Number:     " ,self.number_in_stock)
    print("Date added:       " ,self.date_added)

#class Book() subclass of class Product()
class Book(Product):
  def __init__(self, product_id,price, prime_eligible,number_in_stock,date_added, title,author,num_pages,publisher,publication_date):
    super().__init__(product_id,price, prime_eligible,number_in_stock,date_added)
    self.title            = title
    self.author           = author
    self.num_pages        = num_pages
    self.publisher        = publisher
    self.publication_date = publication_date
  
#setters for the 5 attributes of subclass Book
  def set_title(self,title):
      self.title = title
  
  def set_author(self,author):
      self.author = author

  def set_num_pages(self,num_pages):
      self.num_pages = num_pages

  def set_publisher(self,publisher):
      self.publisher = publisher

  def set_publication_date(self,publication_date):
      self.publication_date = publication_date

#getters for the 5 attributes of subclass Book
  def get_title(self):
    return self.title

  def get_author(self):
    return self.author

  def get_num_pages(self):
    return self.num_pages

  def get_publisher(self):
    return self.publisher

  def get_publication_date(self):
    return self.publication_date

#function that prints all the data fields of Book(Product)
  def print_all(self):
    super().print_all()
    print("Title:            ",self.title)
    print("Author:           ",self.author)
    print("Number of pages:  ",self.num_pages)
    print("Publisher:        ",self.publisher)
    print("Publication Date: ",self.publication_date)

mrsHinch = Book(8954785484, 25.75, True, 2,  "10/05/2017", "Mrs Hinch: The Little Book of Lists", "Mrs Hinch", 216, "Michael Joseph", 2017)

notaDietBook = Book(3595684987, 51.17, False, 6, "14/10/2018","Not a Diet Book","James Smith",304,"Harper Collins", 2019)

molehorsefoxboy = Book("B5687854456", 325, False, 0, "4/11/2013","The Boy, The Mole, The Fox and The Horse", "Charley Mackey",264,"Ebury Press", 2015)

mrsHinch.print_all()
print()#blank line for clarity

notaDietBook.print_all()
print()#blank line for clarity

notaDietBook.set_price(5)
print()#blank line for clarity

print(notaDietBook.get_price())
print()#blank line for clarity

notaDietBook.print_all()
print()#blank line for clarity

molehorsefoxboy.print_all()
print()#blank line for clarity
